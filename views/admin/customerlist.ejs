                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="customerlist">
                                <thead>
                                    <tr style="background-color: white; color: black;">
                                        <th scope="col" class="col-name">Name</th>
                                        <th scope="col" class="col-email">Email</th>
                                        <th scope="col" class="col-status">Status</th>
                                        <th scope="col" class="col-mobile">Mobile</th>
                                        <!-- Add more columns if needed -->
                                        <th scope="col" class="col-action text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof users !== 'undefined') { %>
                                        <% for (let i = 0; i < users.length; i++) { %>
                                            <tr>
                                                <td class="col-name"><%= users[i].name %></td>
                                                <td class="col-email"><%= users[i].email %></td>
                                                <td class="col-status">
                                                    <% console.log('isActive:', users[i].isActive); %>
                                                    <% if (users[i].isActive) { %>
                                                        <span class="badge" style="background-color: rgb(7, 219, 11);">Active</span>
                                                    <% } else { %>
                                                        <span class="badge" style="background-color: red;">Blocked</span>
                                                    <% } %>
                                                </td>
                                                <td class="col-mobile"><%= users[i].mobile %></td>
                                                <td class="col-action text-end">
                                                    <% if (users[i].isActive) { %>
                                                        <a href="/admin/blockuser?id=<%= users[i]._id %>" class="btn btn-sm font-sm" style="background-color: rgb(54, 138, 198); color: white;">
                                                            Block
                                                        </a>
                                                    <% } else { %>
                                                        <a href="/admin/unblockuser?id=<%= users[i]._id %>" class="btn btn-sm font-sm" style="background-color: rgb(252, 0, 0); color: white;">
                                                            Unblock
                                                        </a>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% } %>
                                        
                                    <% } %>
                                </tbody>
                            </table>
                            <% if (totalPages){ %>
                                <nav aria-label="Page navigation example" >
                                    <ul class="pagination justify-content-center">
                                    <% if (currentPage > 1) { %>
                                      <li class="page-item ">
                                        <a class="page-link" href="/admin/customerlist?page=<%=currentPage-1%>" >Previous</a>
                                      </li>
                                      <% } %>
                                     
                                      <li class="page-item"><a class="btn btn-sm active" ><%=currentPage%></a></li>
                                    
                                      <% if (currentPage < totalPages) { %>
                                      <li class="page-item">
                                        <a class="page-link" href="/admin/customerlist?page=<%=currentPage+1%>">Next</a>
                                      </li>
                                      <% } %>
                                      <% } %>
