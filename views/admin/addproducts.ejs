        function validateAndSubmit() {
            if (validateForm()) {
                document.getElementById("productform").submit();
                // Assuming the form has an ID "myForm"
            } else {
                return false;
            }
        }
    
        function validateForm() {

               resetErrorMessages();
              console.log("in validation function");

             let isValid = true;
             const productname = document.getElementById("productnameX").value.trim();
             const description = document.getElementById("descriptionX").value.trim();
             const color = document.getElementById("colorX").value.trim();

             const regularPrice = parseInt(document.getElementById("regularPriceX").value);
             const salePrice = parseInt(document.getElementById("salePriceX").value);

             let totalQuantity = document.getElementById("quantityX").value;
             let smallsize_quantity = document.getElementById("ssizeq").value;
             let mediumsize_quantity = document.getElementById("msizeq").value;
             let largesize_quantity = document.getElementById("lsizeq").value;
             
             
             smallsize_quantity = smallsize_quantity !== "" ? parseInt(smallsize_quantity) : "";
          
             totalQuantity = totalQuantity !== "" ? parseInt(totalQuantity) : "";
             mediumsize_quantity = mediumsize_quantity !== "" ? parseInt(mediumsize_quantity) : "";
             largesize_quantity = largesize_quantity !== "" ? parseInt(largesize_quantity) : "";

             console.log(productname);
             console.log(description);
             console.log(regularPrice);
             console.log(salePrice);
             console.log(totalQuantity);
             console.log(smallsize_quantity);
             console.log(mediumsize_quantity);
             console.log(largesize_quantity);
             console.log(color);

             if (productname === "") {
                 displayErrorMessage("productName-error", "Product Name is required");
                 isValid = false;
             }

             if (description === "") {
                 displayErrorMessage("description-error", "Write the description About the product");
                 isValid = false;
             }

             if (isNaN(regularPrice) || regularPrice <= 0) {
                 displayErrorMessage("regularPrice-error", "Regular price must be a valid positive number");
                 isValid = false;
             }

             if (isNaN(salePrice) || salePrice <= 0 || regularPrice < salePrice) {
                 displayErrorMessage("salePrice-error", "Sale price must be a valid positive number less than Regular price");
                 isValid = false;
             }

             if (totalQuantity === "" || isNaN(totalQuantity) || totalQuantity <= 0) {
                 displayErrorMessage("quantity-error", "Quantity must be a valid positive number");
                 isValid = false;
             }

             if (smallsize_quantity === "" || isNaN(smallsize_quantity) || smallsize_quantity < 0) {
                 displayErrorMessage("s-error", "Small Size Quantity must be a valid non-negative number");
                 isValid = false;
             }

             if (mediumsize_quantity === "" || isNaN(mediumsize_quantity) || mediumsize_quantity < 0) {
                 displayErrorMessage("m-error", "Medium Size Quantity must be a valid non-negative number");
                 isValid = false;
             }

             if (largesize_quantity === "" || isNaN(largesize_quantity) || largesize_quantity < 0) {
                 displayErrorMessage("l-error", "Large Size Quantity must be a valid non-negative number");
                 isValid = false;
             }

             const sumOf_sizeQuantities = smallsize_quantity + mediumsize_quantity + largesize_quantity;

             if (sumOf_sizeQuantities !== totalQuantity) {
                 displayErrorMessage("sumquantity-error", "Size quantities must be equal to the TotalQuantity");
                 isValid = false;
             }

             if (color === "") {
                 displayErrorMessage("color-error", "Color is required");
                 isValid = false;
             }

             return isValid;
}

    
        function displayErrorMessage(elementId, message) {
            var errorElement = document.getElementById(elementId);
            errorElement.innerText = message;
            errorElement.style.display = "block";
            errorElement.style.color = "red";
        }
    
        function resetErrorMessages() {
            var errorElements = document.querySelectorAll(".error-message");
            errorElements.forEach(function (element) {
                element.innerText = "";
                element.style.display = "none";
            });
        }
    
        //array to store the selecting images
        const selectedImages = []
        document.getElementById('imageInput').addEventListener("change", handleFileSelect)
    
        function handleFileSelect(event) {
            const addedImagesContainer = document.getElementById("addedImagesContainer")
            addedImagesContainer.innerHTML = " ";
    
            const files = event.target.files;
    
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                selectedImages.push(file);
    
                const thumbnail = document.createElement('div');
                thumbnail.classList.add("thumbnail");
    
                const img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                img.alt = "thumbnail";
                img.style.width = "50px";
                img.style.height = "auto";
    
                const removeIcon = document.createElement("span");
                removeIcon.classList.add("remove-icon");
                removeIcon.innerHTML = "&times";
    
                removeIcon.addEventListener("click", function () {
                    const index = selectedImages.indexOf(file);
                    if (index >= 0) {
                        selectedImages.splice(index, 1);
                    }
                    thumbnail.remove();
                });
    
                thumbnail.appendChild(img);
                thumbnail.appendChild(removeIcon);
                addedImagesContainer.appendChild(thumbnail);
            }
        }
    </script>
    
