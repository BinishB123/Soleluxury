<%- include("../partials/adminHeader") %>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Coupons Edit </h2>
            <% if(errorMessage) { %>
                <span class="text-center" style="color: red;"><%= errorMessage %></span>
            <% } %>
            
        </div>
        

    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6"> <!-- Adjust col-md-6 to suit your layout -->
                <div class="card">
                    <div class="card-body">
                        <form method="post" action="/admin/updateCoupon?id=<%=coupon._id  %>" id="couponform">
                            <div class="mb-4">
                                <label for="coupon-name" class="form-label">Coupon Name</label>
                                <input type="text" id="coupon-name" name="couponName" class="form-control" value="<%= coupon.name %>" />
                                <div id="error-coupon-name" class="error-message"></div>
                            </div>
                            <div>
                                <label for="startingDate" class="form-label">Start Date</label>
                                <input type="date" name="startDate" class="form-control" required="true" id="startDate" value="<%=createdOn %>" />
                                <div id="errorstartdate" class="error-message"></div>
                            </div>
                            <div>
                                <label for="expiringDate" class="form-label">End Date</label>
                                <input type="date" name="endDate" class="form-control" id="endDate" required="true" value="<%= expireOn %>" />
                                <div id="errorenddate" class="error-message"></div>
                            </div>
                            
                            
                            <div class="input-group">
                                <label for="discount" class="form-label d-block">Discount</label>
                                <div class="d-flex flex-row align-items-center">
                                    <input type="text" name="Discount"  class="form-control text-start" id="discount" placeholder="1-100%" class="form-control" style="margin-top: 20px;" value="<%=coupon.discount  %>" />
                                    <span class="input-group-text"  style="margin-top: 20px;">%</span>
                                </div>
                                <div id="discounterror" class="error-message"></div>
                            </div>
                            
                            
                            
                            <div class="d-grid">
                                <button class="btn btn-primary mt-20" type="submit" style="color:white;background-color: rgb(1, 9, 17);">update</button>
                            </div>
                            <!-- Container for global error messages -->
                            <div id="errmsg" class="error-message"></div>
                        </form>
                    </div> <!-- card body .// -->
                </div> <!-- card .// -->
            </div> <!-- .col-md-6 // -->
        </div> <!-- .row // -->
    </div> <!-- .container // -->
    
</section> <!-- content-main end// -->
