    <script>


setTimeout(() => {
            const insertmessage = document.getElementById("insertmessage");
            insertmessage.style.display = "none";
        }, 5000)




 document.getElementById("categoryform").addEventListener("submit", function(event) {
    event.preventDefault(); // Prevent the default form submission

    if (validateAndSubmit()) {
        this.submit(); // Submit the form if validation passes
    }
});

function validateAndSubmit() {
    if (validateForm()) {
        return true;
    } else {
        return false;
    }
}

function validateForm() {
    resetErrorMessages();
    console.log("in validation function");
    
    let isValid = true;
    const category = document.getElementById("category").value.trim();
    const description = document.getElementById("description").value.trim();
    
    const alphabetRegex =  /^[a-zA-Z.\s]+$/;
;

if (category === "") {
    displayErrorMessage("categoryName-error", "Category Name is required");
    isValid = false;
} else if (!alphabetRegex.test(category)) {
    displayErrorMessage("categoryName-error", "Category Name must contain only alphabets");
    isValid = false;
}

    
if (!alphabetRegex.test(description)) {
    displayErrorMessage("description-error", "Description should contain only alphabets");
    isValid = false;
} else if (description.trim() === "") {
    displayErrorMessage("description-error", "Write the description About the Category");
    isValid = false;
}


    
    return isValid;
}

function displayErrorMessage(elementId, message) {
    var errorElement = document.getElementById(elementId);
    errorElement.innerText = message;
    errorElement.style.display = "block";
    errorElement.style.color = "red";
}

function resetErrorMessages() {
    var errorElements = document.querySelectorAll(".error-message");
    errorElements.forEach(function (element) {
        element.innerText = "";
        element.style.display = "none";
    });
}

            
    </script>
   
