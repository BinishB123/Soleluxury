    <script>
        $(document).ready(function(){
            $('#customerlist').DataTable();
        })


        setTimeout(() => {
            const insertmessage = document.getElementById("insertmessage");
            insertmessage.style.display = "none";
        }, 5000)



        function blockOrUnblockProduct(productId, clicked) {
        let confirmationMessage;
    if (clicked === 'Unlist') {
        confirmationMessage = "Are you sure you want to Block this product?";
    } else {
        confirmationMessage = "Are you sure you want to UnBlock this product?";
    }

    swal({
        text: confirmationMessage,
        buttons: ["cancel", true],
    }).then((result) => {
        if (result === true) {
            $.ajax({
                url: `/admin/blockOrUnblockProduct?id=${productId}`,
                method: 'PATCH',
                contentType: 'application/json',
                success: function (response) {
                    if (response.success) {
                        if (clicked === 'Unlist') {
                            swal("Product Unlisted!", {
                                icon: "success",
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            swal("Product Listed!", {
                                icon: "success",
                            }).then(() => {
                                location.reload();
                            });
                        }
                    } else {
                        console.error('Blocking/Unblocking failed');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Ajax error:', error);
                }
            });
        }
    });
}


    </script>
